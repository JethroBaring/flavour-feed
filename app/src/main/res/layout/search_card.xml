<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:id="@+id/searchCard"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:gravity="center"
        >

        <!-- Title, secondary and supporting text -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/searchProfile"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:scaleType="fitXY"
            android:src="@color/black"
            app:strokeWidth="1dp"
            app:strokeColor="@color/flutter_sky"
            android:padding="@dimen/_1sdp"
            app:shapeAppearanceOverlay="@style/circular_image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/searchDisplayName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfproroundedsemibold"
                    android:text="Display name"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/searchEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_minus5sdp"
                    android:textSize="@dimen/_11ssp"

                    android:fontFamily="@font/sfproroundedregular"
                    android:text="sample comment"
                    android:maxLength="25"
                    />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/sendRequest"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/newfollowicon"/>
    </LinearLayout>
</RelativeLayout>